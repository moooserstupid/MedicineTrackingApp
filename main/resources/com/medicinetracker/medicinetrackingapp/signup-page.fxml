<AnchorPane prefHeight="400.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medicinetracker.medicinetrackingapp.SignupPageController">
   <children>
      <StackPane prefHeight="400.0" prefWidth="445.0" />
      <GridPane layoutX="57.0" prefHeight="382.0" prefWidth="330.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Label text="Sign Up">
                     <font>
                        <Font name="Verdana Bold" size="24.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <TextField fx:id="firstnameField" prefHeight="26.0" prefWidth="380.0" promptText="First Name" GridPane.rowIndex="1">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="lastnameField" promptText="Last Name" GridPane.rowIndex="2">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="emailField" promptText="Email" GridPane.rowIndex="3">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font></TextField>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="8">
               <children>
                  <Button fx:id="signupButton" layoutX="50.0" layoutY="6.0" mnemonicParsing="false" onAction="#signupButtonPressed" prefHeight="26.0" prefWidth="230.0" style="-fx-background-color: lightgreen;" text="Sign Up">
                     <font>
                        <Font name="Verdana" size="12.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
            <TextField fx:id="passwordField" promptText="Password (at least 6 characters)" GridPane.rowIndex="4">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font></TextField>
            <TextField fx:id="reenterPasswordField" promptText="Re-enter password" GridPane.rowIndex="5">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font></TextField>
            <StackPane prefHeight="150.0" prefWidth="200.0" GridPane.rowIndex="9">
               <children>
                  <Label fx:id="errorLabel" text="Error Label" />
               </children>
            </StackPane>
         </children>
      </GridPane>
   </children>
</AnchorPane>
